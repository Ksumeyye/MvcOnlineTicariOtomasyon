@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departmanına Göre Personel Satış Sayfası</h2>
<br />
@{
    int count = 0;
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.prsnlad</li>
</ol>
<table class="table table-dark">
    <thead>
        <tr>
            <th></th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Personel Profil</th>
            <th>Yazdır</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Urunler.UrunAd</td>
                <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td>@item.Fiyat ₺</td>
                <td>@item.Adet</td>
                <td>@item.ToplamTutar ₺</td>
                <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
                <td><img src="@item.Personel.PersonelGorsel" style="height: 50px; width: 50px; border-radius: 50%;" /></td>
                <td><a href="#" class="btn btn-default" style="background-color:dodgerblue"><i class="fa fa-print"></i></a></td>
            </tr>
        }
    </tbody>
</table>

