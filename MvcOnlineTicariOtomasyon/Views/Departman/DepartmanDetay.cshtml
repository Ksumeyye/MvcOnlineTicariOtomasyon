@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Detay Sayfası</h2>
@{
    int count = 0;
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.dprtmnad</li>
</ol>
<table class="table table-dark">
    <thead>
        <tr>
            <th></th>
            <th>Personel Adı</th>
            <th>Personel Soyadı</th>
            <th>Personel Profil</th>
            <th>Satışlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.PersonelAd</td>
                <td>@item.PersonelSoyad</td>
                <td><img src="@item.PersonelGorsel" style="height: 50px; width: 50px; border-radius: 50%;" /></td>
                <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-outline-primary"><i class="fa fa-shopping-cart"></i></a></td>
            </tr>
        }
    </tbody>
</table>