@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h3>Departmanlar</h3>
<br />
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
       <tr>
           <th>#</th>
           <th>Departman Adı</th>
           <th>İşlemler</th>
           <th>Detaylar</th>
       </tr>
@foreach(var item in Model)
{
    count++;
    <tr>
        <td>@count</td>
        <td>@item.DepartmanAd</td>
        <td>
            <a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
            <a href="/Departman/DepartmanGuncelle/@item.DepartmanID" class="btn btn-outline-info"><i class="fa fa-recycle"></i> Güncelle</a>
        </td>
        <td>
            <a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
        </td>
    </tr>
}
  </table>
<a href="/Departman/DepartmanEkle" class="btn btn-outline-success">Departman Ekle</a>
