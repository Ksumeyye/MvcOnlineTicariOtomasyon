@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h3>Satış & Hareket</h3>
<br />
@{
    int count = 0;
}
<table id="tbl1" class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Cari Adı & Soyadı</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Personel Adı & Soyadı</th>
            <th>İşlemler</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr class="table-primary">
                <td>@count</td>
                <td>@item.Urunler.UrunAd</td>
                <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td>@item.ToplamTutar</td>
                <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>
                    <a href="/SatisHareket/SatisHareketGuncelle/@item.SatisID" class="btn btn-outline-info"><i class="fa fa-recycle"></i> Güncelle</a>
                </td>
                <td>
                    <a href="/SatisHareket/SatisHareketDetay/@item.SatisID" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
                </td>

            </tr>

        }

    </tbody>
</table>
<td>
    <a href="/Urun/UrunListesi/" class="btn btn-outline-primary"><i class="fa fa-print"></i> Yazdır</a>
</td>
<br />
<br />
<a href="/SatisHareket/SatisHareketEkle" class="btn btn-outline-success">Yeni Satış Ekle</a>

