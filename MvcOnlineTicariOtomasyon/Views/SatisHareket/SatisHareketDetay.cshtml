@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisHareketDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h3>Satış & Hareket Detayı</h3>
<br />
@{
    int count = 0;
}

<table class="table table-dark">
    <thead>
        <tr>
            <th></th>
            <th>Ürün Adı</th>
            <th>Cari Adı & Soyadı</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Personel Adı & Soyadı</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Urunler.UrunAd</td>
                <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat ₺</td>
                <td>@item.ToplamTutar ₺</td>
                <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>

            </tr>
       
    }
        </tbody>
    </table>
