@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h3>Kargolar</h3>
<br />
<!--Arama İçin-->
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Kargo Takip</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih</td>
            <td>@item.TakipKodu</td>
            <td>
                <a href="/Kargo/KargoTakip/@item.TakipKodu" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
            </td>
        </tr>
    }
</table>
<a href="/Kargo/YeniKargo" class="btn btn-outline-success">Yeni Kargo Girişi</a>
