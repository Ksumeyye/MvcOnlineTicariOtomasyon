@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h3>Personel Ekleme Sayfası</h3>
<br />
@using(Html.BeginForm("PersonelEkle","Personel",FormMethod.Post, new {enctype="multipart/form-data"}))//new {enctype="multipart/form-data"} dosya eklemek için kullanılır.
{ 
<form class="form-group" method="post">
    <label><h4>Personel Adı</h4></label>
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />
    <label><h4>Personel Soyadı</h4></label>
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    <label><h4>Personel Profili</h4></label>
    <br />
    @*@Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })*@
    <input type="file" name="PersonelGorsel"/>
    <br />
    <label><h4>Personel Departmanı</h4></label>
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.Departman, "Departmanı Seçiniz", new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary"><i class="fa fa-save"></i> Kaydet</button>
</form>
}