@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Sepet</h2>
<br />
<form class="form-group" method="post">
    <label><h4>Ürün Id</h4></label>
    <input type="text" name="Urunid" value="@ViewBag.dgr1" class="form-control" />
    <br />
    <label><h4>Personel Ad & Soyad</h4></label>
    @Html.DropDownListFor(x=>x.Personelid, (List<SelectListItem>)
    ViewBag.dgr3, new {@class="form-control"})
    <br />
    <label><h4>Cari Id</h4></label>
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
    <br />
    <label><h4>Adet</h4></label>
    <input type="number" name="Adet" class="form-control" min="0" max="20" id="txt1" onchange="sum();"/> 
    <br />
    <label><h4>Fiyat</h4></label>
    <input type="text" name="Fiyat" value="@ViewBag.dgr2" class="form-control" id="txt2" onkeyup="sum();"/>
    <br />
    <label><h4>Toplam Tutar</h4></label>
    <input type="text" name="ToplamTutar" value="0" class="form-control" id="txt3" readonly/>
    <br />
    
    <button class="btn btn-outline-primary"> Satış Yap</button>
</form>
<br />

<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>


