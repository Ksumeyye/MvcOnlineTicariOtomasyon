@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h3>Cari Guncelleme Sayfası</h3>
<br />
<form method="post">
    @Html.HiddenFor(x => x.CariID)
    <label>Cari Adı</label>
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" }) <!--Validation Kontrolleri için Doğrulama Mesajıdır.-->
    <br />
    <label>Cari Soyadı</label>
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red" }) <!--Validation Kontrolleri için Doğrulama Mesajıdır.-->
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>



