@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.GrupSinifi4>
@{int count = 0; }
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Tablosu</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered w-100">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Şehir Adı</th>
                                    <th>Progress Bar</th>
                                    <th style="width: 40px">Oran</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.KategoriAd</td>
                                        <td>
                                            @if (@item.Sayi == 1)
                                            {
                                                <div class="progress progress-xs">
                                                    <div class="progress-bar progress-bar-danger" style="width:30%"></div>
                                                </div>
                                            }
                                            @if (@item.Sayi == 2)
                                            {
                                                <div class="progress progress-xs">
                                                    <div class="progress-bar bg-warning" style="width:60%"></div>
                                                </div>
                                            }
                                            @if (@item.Sayi == 3)
                                            {

                                                <div class="progress progress-xs">
                                                    <div class="progress-bar bg-success" style="width:90%"></div>
                                                </div>

                                            }
                                        </td>
                                        <td>
                                            @if (@item.Sayi == 1)
                                            {
                                                <span class="badge bg-danger">@item.Sayi</span>
                                            }
                                            @if (@item.Sayi == 2)
                                            {
                                                <span class="badge bg-warning">@item.Sayi</span>
                                            }
                                            @if (@item.Sayi == 3)
                                            {
                                                <span class="badge bg-success">@item.Sayi</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>